@model LiWiMus.Web.MVC.Areas.User.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section Header{
    <partial name="Partials/_LoginHeaderPartial"/>
}

<div class="body">
    <div class="content">
        <div>
            <p class="text-white" style="font-weight: bold; width: 100%; text-align: center">
                CREATE AN ACCOUNT
            </p>
        </div>
        <div>
            <form method="post" asp-area="User" asp-controller="Account" asp-action="Register" style="margin:auto; width: auto;">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="text-white" style="padding-bottom: 2%">
                    <label asp-for="UserName" style="padding-bottom: 2%"></label><br/>
                    <input asp-for="UserName" class="account-input-field"/>
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="text-white" style="padding-bottom:2%">
                    <label asp-for="Email" style="padding-bottom: 2%"></label><br/>
                    <input asp-for="Email" class="account-input-field"/>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="text-white" style="padding-bottom:2%">
                    <label asp-for="Password" style="padding-bottom: 2%"></label><br/>
                    <input asp-for="Password" class="account-input-field"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="text-white" style="padding-bottom:10%">
                    <label asp-for="PasswordConfirm" style="padding-bottom: 2%"></label><br/>
                    <input asp-for="PasswordConfirm" class="account-input-field"/>
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div class="text-white account-submit-button-area">
                    <div>
                        Have an account?<br/>
                        <a class="text-white" asp-area="User" asp-controller="Account" asp-action="Login" style="font-size: smaller">Log In</a>
                    </div>
                    <div>
                        <input type="submit" class="btn text-white account-submit-button" value="Sign Up"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>